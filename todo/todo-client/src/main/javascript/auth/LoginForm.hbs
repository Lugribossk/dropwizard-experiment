<div class="form-group">
    <label for="username">Email</label>
    <input type="text" class="form-control" id="username" placeholder="Username" autocomplete="username" autofocus>
</div>
<div class="form-group">
    <label for="password">Password</label>
    <input type="password" class="form-control" id="password" placeholder="Password" autocomplete="current-password">
</div>
<div class="alert alert-info" style="display: none;">
    <i class="fa fa-exclamation-circle"></i> Email or password incorrect.
</div>
<span style="float:right"><a href="#resetpassword">Forgot your password?</a></span>
<button type="submit" class="btn btn-primary ladda-button" data-style="zoom-out">
    <span class="ladda-label">Log in</span>
</button>
