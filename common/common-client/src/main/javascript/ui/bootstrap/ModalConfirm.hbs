<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-body">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            {{text}}
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-default cancel" data-dismiss="modal">{{cancelLabel}}</button>
            <button type="button" class="btn btn-primary ok" data-dismiss="modal">{{okLabel}}</button>
        </div>
    </div>
</div>